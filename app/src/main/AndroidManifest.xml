<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.skhu.bugcatcher">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WaitCallerDetailActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".CallerListDetailActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".CallerListActivity">

        </activity>
        <activity
            android:name=".ListDetailActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".CatcherListActivity"
            android:label="@string/title_activity_catcher_list"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>
        <activity android:name=".BugApplyActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity android:name=".SignupActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>